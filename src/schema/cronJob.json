{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "uuid": {
      "type": "string",
      "title": "A RFC-4122 conform uuid",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    },
    "externalId": {
      "type": ["string", "null"],
      "title": "A RFC-4122 conform uuid",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    },
    "type": {
      "type": "string",
      "title": "The job type",
      "enum": [
        "Job",
        "Batch",
        "Sequence"
      ]
    },
    "name": {
      "type": ["string"],
      "title": "The job name",
      "pattern": "^[a-zA-z0-9._-]+$",
      "minLength": 3,
      "maxLength": 20
    },
    "data": {
      "type": ["string", "null"],
      "title": "Job input or output"
    },
    "allowFailure": {
      "type": "boolean",
      "default": "false"
    },
    "CronJob": {
      "type": "object",
      "required": [
        "type",
        "name",
        "schedule"
      ],
      "properties": {
        "schedule": {
          "description": "The schedule in Cron format, see https://en.wikipedia.org/wiki/Cron.",
          "type": "string"
        },
        "type": {
          "const": "Job"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "input": {
          "$ref": "#/definitions/data"
        },
        "allowFailure": {
          "$ref": "#/definitions/allowFailure"
        },
        "externalId": {
          "$ref": "#/definitions/externalId"
        },
        "children": {
          "type": "array",
          "maxItems": 0
        }
      },
      "additionalProperties": false
    },
    "CronJobCollection": {
      "type": "object",
      "required": [
        "type",
        "schedule"
      ],
      "properties": {
        "schedule": {
          "description": "The schedule in Cron format, see https://en.wikipedia.org/wiki/Cron.",
          "type": "string"
        },
        "type": {
          "type": "string",
          "title": "The job type",
          "enum": [
            "Batch",
            "Sequence"
          ]
        },
        "name": {
          "type": ["string", "null"],
          "title": "The job name",
          "pattern": "^[a-zA-z0-9._-]+$",
          "minLength": 3,
          "maxLength": 20
        },
        "input": {
          "$ref": "#/definitions/data"
        },
        "allowFailure": {
          "$ref": "#/definitions/allowFailure"
        },
        "externalId": {
          "$ref": "#/definitions/externalId"
        },
        "children": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              {
                "$ref": "./job.json#/definitions/job"
              },
              {
                "$ref": "./job.json#/definitions/job_collection"
              }
            ]
          }
        }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/CronJob"
    },
    {
      "$ref": "#/definitions/CronJobCollection"
    }
  ]
}
